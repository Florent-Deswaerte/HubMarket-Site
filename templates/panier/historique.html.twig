{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Panier{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<!--Main layout-->
    <main class="pt-5 mx-lg-5">
        <div class="container-fluid mt-5">
            <div class="card mb-4 wow fadeIn">
                <div class="card-body d-sm-flex justify-content-between">
                    <h4 class="mb-2 mb-sm-0 pt-1">
                        <span> Historique des commandes  -  Total des commandes : <b>{{ somme|number_format(2, ',', '.') }} €</b></span>
                    </h4>
                </div>
            </div>

            <div class="row text-center wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
                <div class="col-md-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Prix</th>
                                        <th scope="col">Marque</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for commandes in commande %}
                                    <tr>
                                        <td>{{ commandes.id }}</td>
                                        <td>{{ commandes.DateCommande }}</td>
                                        <td>{{ commandes.TotalCommande|number_format(2, ',', '.') }} €</td>
                                        <td>{{ commandes.brand_stripe }}</td>
                                        <td><span class="badge badge-success">{{ commandes.status_stripe }}</span></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>
{% endblock %}
