{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Produits - Création
{% endblock %}

{% block body %}
	<div class="__form">
		{{ form_start(form) }}
            {{ form_label(form.categorie, "Nom")}}
            {{ form_widget(form.nom) }}
            {{ form_label(form.categorie, "Quantité")}}
            {{ form_widget(form.qty) }}
            {{ form_label(form.categorie, "Fournisseur")}}
            {{ form_widget(form.fournisseur) }}
            {{ form_label(form.categorie, "Catégorie")}}
            {{ form_widget(form.categorie) }}
            {{ form_label(form.categorie, "Prix")}}
            {{ form_widget(form.prix) }}
            {{ form_widget(form.Submit, { 'label': 'Envoyer' }) }}
		{{ form_end(form) }}
	</div>
{% endblock %}
