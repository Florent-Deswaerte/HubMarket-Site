{% extends 'base.html.twig' %}

{% block title %}
{{parent()}}Produits - Création
{% endblock %}

{% block body %}
<div class="container">
	<div class="form__inputs">
		<div class="col-lg-6">
			{{ form_start(form) }}
			<div class="form__input">
				{{ form_label(form.nom, "Nom")}}
				{{ form_widget(form.nom) }}
			</div>
			<div class="form__input">
				{{ form_label(form.description, "Description")}}
				{{ form_widget(form.description) }}
			</div>
			<div class="form__input">
				{{ form_label(form.qty, "Quantité")}}
				{{ form_widget(form.qty) }}
			</div>
			<div class="form__input">
				{{ form_label(form.fournisseur, "Fournisseur")}}
				{{ form_widget(form.fournisseur) }}
			</div>
			<div class="form__input">
				{{ form_label(form.categorie, "Catégorie")}}
				{{ form_widget(form.categorie) }}
			</div>
			<div class="form__input">
				{{ form_label(form.prix, "Prix")}}
				{{ form_widget(form.prix) }}
			</div>
			<div class="form__input">
				{{ form_label(form.imagePath, "Emplacement de image")}}
				{{ form_widget(form.imagePath) }}
			</div>
			<div class="form__submit">
				{{ form_widget(form.Submit, { 'label': 'Envoyer' }) }}
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}