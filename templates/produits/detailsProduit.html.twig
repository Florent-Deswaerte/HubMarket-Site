{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Produits - Details{% endblock %}

{% block body %}
<!-- Shop Details Section Begin -->
<section class="shop-details">
    <div class="product__details__pic">
        <div class="container">
            <div class="product__details__breadcrumb">
                <a href={{ path('accueil') }}>Hubmarket</a>
                <a href={{path('produits_liste')}}>Shop</a>
                <span>{{monProduit.nom}}</span>
            </div>
            <div class="row">

                <div class="tab-content col">
                    <div class="tab-pane active" id="tabs-1" role="tabpanel">
                        <div class="product__details__pic__item">
                            <img src="{{monProduit.imagePath}}" alt="">
                        </div>
                    </div>
                </div>

                <div class="product__details__content col">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-8">
                            <div class="product__details__text">
                                <h4>{{monProduit.nom}}</h4>
                                <h3>{{monProduit.prix}}</h3>
                                <p>{{monProduit.description}}</p>
                                {% if monProduit.qty > 0 %}
                                    <div class="product__details__cart__option">
                                        <a href="{{ path('panier_ajoutProduit', {'id': monProduit.id})}}"
                                            class="primary-btn">Ajouter au panier</a>
                                    </div>
                                    {% else %}
                                    <span> Le produit n'est plus en stock </span>
                                {% endif %}
                                <div class="product__details__last__option">
                                    <img src="img/shop-details/details-payment.png" alt="">
                                    <ul>
                                        <li><span>Restant:</span> {{monProduit.qty}}</li>
                                        <li><span>Categories:</span> {{catProduit}} </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


</section>

<section class="related spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="related-title">Related Product</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
                <div class="product__item">
                    <div class="product__item__text">
                        <h6>Piqué Biker Jacket</h6>
                        <a href="#" class="add-cart">+ Add To Cart</a>
                        <h5>$67.24</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
                <div class="product__item">
                    <div class="product__item__text">
                        <h6>Piqué Biker Jacket</h6>
                        <a href="#" class="add-cart">+ Add To Cart</a>
                        <h5>$67.24</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
                <div class="product__item sale">
                    <div class="product__item__text">
                        <h6>Multi-pocket Chest Bag</h6>
                        <a href="#" class="add-cart">+ Add To Cart</a>
                        <h5>$43.48</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 col-sm-6">
                <div class="product__item">
                    <div class="product__item__text">
                        <h6>Diagonal Textured Cap</h6>
                        <a href="#" class="add-cart">+ Add To Cart</a>
                        <h5>$60.9</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Related Section End -->



{% endblock %}